   await fs.writeFile(filePath, content, 'utf8');
   console.log('[DEBUG] Successfully saved file');
   return { success: true, path: filePath };
 } catch (error) {
   console.error('[DEBUG] Failed to save file:', error);
   throw error;
 }
});

